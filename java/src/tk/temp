from tkinter import *
from tkinter.messagebox import showinfo
from random import *

class Game(Frame):

    def __init__(self,  master):
        Frame.__init__(self, master)
        self.grid()
        self.create_widgets()

        #tracks answer, so it's easy to test
        print(self.answer)

    def create_widgets(self):
        self.answer1=choice(range(0,10))
        self.answer2=choice(range(0,10))
        self.answer=self.answer1 + self.answer2
        
        self.title=Label(self, text="Enter your guess:").grid(
            row=0, column=0,sticky=N)
        
        self.number=Entry(self)
        self.number.grid(row=1, column=0, sticky=N)

        disp = str(self.answer1) + " + " + str(self.answer2)
        self.number.insert(0, disp)

        self.number2=Entry(self)
        self.number2.grid(row=2, column=0, sticky=N)
        
        self.bttn=Button(self, text="Enter", command=self.guess)
        self.bttn.grid(row=3, column=0, sticky=N)

        self.number.bind('<KeyPress>', self.ent_guess)
        self.number.focus_set()

        self.wrong=Text(self, width=50, height=2, wrap=WORD)
        self.wrong.grid(columnspan=2, sticky=N)

    def guess(self):
        self.answer1=choice(range(0,10))
        self.answer2=choice(range(0,10))
        self.answer=self.answer1 + self.answer2
        content = int(self.answer)
        
        if int(content)==self.answer:
            popup=("Thats correct! A new game will now begin!")

            showinfo(message=popup)

            #new random number, game restarts, blanks everything
            self.answer=choice(range(0,10))
            print(self.answer)
            
            self.number.delete(0,END)
            self.number2.delete(0,END)
            self.wrong.delete(0.0,END)
        else:
            #tells you it's the wrong answer, just cause I'm nice
            self.wrong.delete(0.0, END)
            self.number.delete(0, END)
            
            self.wrong.insert(0.0, "Wrong answer!")
        
    def ent_guess(self, event):
        if event.keysym == "Return":
            self.guess()

#main
root=Tk()
root.title("tk")
root.geometry("265x120")
root.resizable(width=False, height=False)

app=Game(root)
root.mainloop()
